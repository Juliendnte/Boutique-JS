<!DOCTYPE html>
<html lang="fr">
  <head>
    <%- include('../components/head'); %>
    <link rel="stylesheet" href="/public/css/login.css" />
    <link rel="stylesheet" href="/public/css/accueil.css" />

    <title>Login</title>
  </head>
  <body>
    <%- include('../components/header'); %>
    <%-include('../components/burger-list'); %>

    <section>
      <div class="search-bar-ctn">
        <%- include('../components/search-bar'); %>
      </div>
      <form action="/treatment/register" method="post" class="sign-up-ctn">
        <img src="/public/img/logo.png" alt="Logo Horo Haven" />
        <h1>Create account</h1>
        <input name="username" type="text" placeholder="Username" required />
        <input name="email" type="mail" placeholder="E-mail" required />
        <input type="password" placeholder="Password" required />
        <input name="password" type="password" placeholder="Confirm Password" required />
        <button>CREATE ACCOUNT</button>
        <a href="/login">Already have an account ? Click here</a>
      </form>
    </section>
  </body>
  <script src="/public/js/script2.js"></script>
</html>
